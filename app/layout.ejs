  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <!-- tailwind modal 元件 -->
  <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.2/dist/flowbite.min.css" />
  <!-- swiper -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
  
  <link rel="stylesheet" href="./assets/style/all.css">
</head>

<body class="">
  <header class="z-10 fixed w-full bg-dark-100
  before:absolute before:left-0 before:bottom-0 before:h-0.5 before:w-1/2 before:bg-primary
  after:absolute after:right-0 after:bottom-0 after:h-0.5 after:w-1/2 after:bg-secondary">
    <div class="container py-6">
      <div class="flex justify-between items-center">
        <h1 class="">
          <a href="#" class="block h-6 w-6 bg-[url('../images/logo-mobile.svg')] bg-contain bg-center bg-no-repeat indent-[101%] overflow-hidden whitespace-nowrap
          md:h-[42px] md:w-[174px] md:bg-[url('../images/logo.svg')]">
            Coding Home
          </a>
        </h1>
        <span id="menuBtn" class="block md:hidden material-symbols-outlined text-primary cursor-pointer">
          drag_handle
        </span>
        <nav class="navbar duration-300 overflow-hidden w-full absolute top-full left-0 bg-dark-100
        md:relative md:w-auto">
          <ul class="flex flex-col md:flex-row text-white text-center">
            <li><a href="#" class="link block px-6 py-2 border-b border-white md:border-none">首頁</a></li>
            <li><a href="#" class="link block px-6 py-2 border-b border-white md:border-none">課程介紹</a></li>
            <li>
              <a href="#" class="link block px-6 py-2 md:pr-0">
                <div class="flex justify-center items-center gap-1.5">
                  <span class="material-symbols-outlined">
                    account_circle
                  </span>
                  登入
                </div>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main class="pt-[72px] md:pt-[90px]">
    <%- contents %>
  </main>

  <footer class="bg-dark-500">
    <div class="container py-4 md:py-6">
      <p class="text-gray-800 text-center text-xs md:text-base">Coding Home © 2022 All Rights Reserved</p>
    </div>
  </footer>
  <script src="./assets/js/vendors.js"></script>
  <script src="https://unpkg.com/flowbite@1.5.2/dist/flowbite.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
  <script src="./assets/js/all.js"></script>
</body>

</html>
